{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}


